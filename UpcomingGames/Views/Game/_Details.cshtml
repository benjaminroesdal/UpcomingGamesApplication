@model IEnumerable<UpcomingGames.Models.GameModel>

<div class="">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>


@foreach (var item in Model)
{
    <div class="detail_container">
        <div class="col_1">
            <div class="col_1_sub_1">
                <div id="@item.game_id" class="carousel slide slideshow" data-ride="carousel" data-interval="false">
                    <!-- Indicators -->
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @for (int i = 0; i < item.images.Count; i++)
                        {
                            if (i == 0 && item.YT_trailer != null)
                            {
                                <div class="item active video">
                                    <iframe src="@item.YT_trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen scrolling="yes"></iframe>
                                </div>
                            }
                            else if (i == 0)
                            {
                                <div class="item active">
                                    <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                </div>
                            }
                        }
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#@item.game_id" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#@item.game_id" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col_1_sub_2">
                <div class="game_info_wrapper">
                    <div class="genre_wrapper">
                        <h1 class="title_text">Genres</h1>
                        <div class="genre_container">
                            @for (int i = 0; i < item.genres.Count; i++)
                            {
                                <p class="details-normal_text">@item.genres.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                    <div class="developer_wrapper">
                        <h1 class="title_text">Developers</h1>
                        <div class="developer_container">
                            @for (int i = 0; i < item.developers.Count; i++)
                            {
                                <p class="details-normal_text">@item.developers.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                    <div class="publisher_wrapper">
                        <h1 class="title_text">Publishers</h1>
                        <div class="publisher_container">
                            @for (int i = 0; i < item.publishers.Count; i++)
                            {
                                <p class="details-normal_text">@item.publishers.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="platform_wrapper">
                    <div class="platform_column">
                        <h1 class="title_text">Platforms</h1>
                        <div class="details-platform_container">
                            @for (int i = 0; i < item.platforms.Count; i++)
                            {
                                if (item.platforms.ElementAt(i) == 6)
                                {
                                    <p class="details-normal_text">PC</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 48)
                                {
                                    <p class="details-normal_text">PS4</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 203)
                                {
                                    <p class="details-normal_text">Google Stadia</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 167)
                                {
                                    <p class="details-normal_text">PS5</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 169)
                                {
                                    <p class="details-normal_text">Xbox X</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 49)
                                {
                                    <p class="details-normal_text">Xbox One</p>
                                    <p class="details-release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                            }
                        </div>
                    </div>
                    <div class="game_links_wrapper">
                        <h1 class="title_text">Links</h1>
                        <div class="links-container">
                            @if (item.official_site != null)
                            {
                            <a href="@item.official_site">Official Site</a>
                            }
                            @if (item.steam_site != null)
                            {
                            <a href="@item.steam_site">Steam</a>
                            }
                            @if (item.epicgames_site != null)
                            {
                            <a href="@item.epicgames_site">Epic Games</a>
                            }
                            @if (item.gog_site != null)
                            {
                            <a href="@item.gog_site">GoG</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col_2">
            <div class="summary_wrapper">
                <div class="summary_container">
                    <h1 class="title_text detail_title">Summary</h1>
                    <p class="details-normal_text">@item.summary</p>
                </div>
                <a id="more" href="#">Read more </a>
            </div>
        </div>
    </div>
}
<script>
    $('#more').click(function (e) {
        e.stopPropagation();
        $('.summary_container').css({
            'min-height': '100px',
            'max-height': '2000px'
        })
    });

    $(document).click(function () {
        $('#more').css({
            'max-height': '300px'
        })
    })
</script>
