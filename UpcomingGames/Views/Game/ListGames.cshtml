@model IEnumerable<UpcomingGames.Models.GameModel>

@{
    ViewBag.Title = "ListGames";
}
    <div class="wrapper">
        <div class="date_wrapper">
            @using (Html.BeginForm("ListSortedGames", "Game", FormMethod.Get))
            {
                <div class="input-group date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
                    <div class="datepicker_div">
                        <input type="text" class="form-control" id="date1" name="date1">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
                    <div class="datepicker_div">
                        <input type="text" class="form-control" id="date2" name="date2">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Search" name="Search" />
            }
        </div>
            @foreach (var item in Model)
            {
                <div class="game_container">
                    <div class="game_info" id="game_info_1">
                        <p class="game_name">@Html.DisplayFor(modelItem => item.name)</p>
                        @{ string temp_dat = item.GetReadableDate(item.released);}
                        <p class="release_date_text">@Html.DisplayFor(modelItem => temp_dat)</p>
                    </div>
                    <div id="@item.game_id" class="carousel slide slideshow" data-ride="carousel" data-interval="false">
                        <!-- Indicators -->
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < item.short_images.Count; i++)
                            {
                                if (i == 0 && item.YT_trailer != null)
                                {
                                    <div class="item active">
                                        <iframe class="YT_trailer" src=@item.YT_trailer>
                                        </iframe>
                                    </div>
                                }
                                else if (i == 0 && item.YT_trailer == null)
                                {
                                    <div class="item active">
                                        <img src="@item.short_images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <img src="@item.short_images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                    </div>
                                }
                            }
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#@item.game_id" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#@item.game_id" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="game_info" id="game_info_1">
                        @for (int i = 0; i < item.platforms.Count; i++)
                        {
                            if (item.platforms.ElementAt(i) == "PC")
                            {
                                <img class="PC_logo" src="~/Images/PC_logo.png" alt="PC" />
                            }
                            else if (item.platforms.ElementAt(i) == "PlayStation")
                            {
                                <img class="PS4_logo" src="~/Images/PS4_logo.png" alt="PS4" />
                            }
                            else if (item.platforms.ElementAt(i) == "Xbox")
                            {
                                <img class="XBOX_logo" src="~/Images/XBOX_logo.png" alt="PS4" />
                            }
                            else if (item.platforms.ElementAt(i) == "Nintendo Switch")
                            {
                                <img class="SWITCH_logo" src="~/Images/SWITCH_logo.png" alt="PS4" />
                            }
                        }
                    </div>
                </div>
            }
            <table>
                <tbody id="trow">
                </tbody>
            </table>
            <div class="loading_div">
                <div id="loadingdiv" class="spinner-border text-danger" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>

    <script>
        $(document).ready(function () {
    var pageindex = 2;
    var NoMoreData = false;
    var inProgress = false;

            $(window).on("scroll", function () {
                var docHeight = $(document).height();
                var winScrolled = $(window).height() + $(window).scrollTop();
                if ((docHeight - winScrolled < 1) & (inProgress == false) & (NoMoreData == false)) {
                    console.log("module scrolled to bottom")
                    inProgress = true;
                    $("#loadingdiv").show();

                    $.post("@Url.Action("InfiniteScroll", "Game")", { "pageindex": pageindex },
                        function (data) {
                            pageindex = pageindex + 1;
                            NoMoredata = data.NoMoredata;
                            $("#trow").append(data.HTMLString);
                            $("#loadingdiv").hide();
                            inProgress = false;
                        }
                    );
                }
            });
        })
    </script>
