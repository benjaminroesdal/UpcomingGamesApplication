@model IEnumerable<UpcomingGames.Models.GameModel>

@{
    ViewBag.Title = "ListGames";
}
    <div class="wrapper">
            @foreach (var item in Model)
            {
                <div class="game_container">
                    <div class="game_info" id="game_info_1">
                        <p class="game_name">@Html.DisplayFor(modelItem => item.name)</p>
                        <p class="release_date_text">@item.UnixTimeStampToDateTime(double.Parse(item.newest_release_date)) </p>
                    </div>
                    <div id="@item.game_id" class="carousel slide slideshow" data-ride="carousel" data-interval="false">
                        <!-- Indicators -->
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            @for (int i = 0; i < item.images.Count; i++)
                            {
                                if (i == 0 && item.YT_trailer != null)
                                {
                                    <div class="item active">
                                        <iframe class="YT_trailer" src=@item.YT_trailer>
                                        </iframe>
                                    </div>
                                }
                                else if (i == 0)
                                {
                                    <div class="item active">
                                        <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                    </div>
                                }
                            }
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#@item.game_id" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#@item.game_id" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="game_info" id="game_info_1">
                        <div class="platform_container">
                            @for (int i = 0; i < item.platforms.Count; i++)
                            {
                                if (item.platforms.ElementAt(i) == 6)
                                {
                                    <p class="platform_text">PC</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 11)
                                {
                                    <p class="platform_text">Xbox</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 48)
                                {
                                    <p class="platform_text">PS4</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 203)
                                {
                                    <p class="platform_text">Google Stadia</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 167)
                                {
                                    <p class="platform_text">PS5</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 169)
                                {
                                    <p class="platform_text">Xbox Series X</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                                else if (item.platforms.ElementAt(i) == 49)
                                {
                                    <p class="platform_text">Xbox One</p>
                                    <p class="release_text">@item.UnixTimeStampToDateTime(double.Parse(item.release_dates.ElementAt(i)))</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
            <table>
                <tbody id="trow">
                </tbody>
            </table>
            <div class="loading_div">
                <div id="loadingdiv" class="spinner-border text-danger" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>

    <script>
        $(document).ready(function () {
    var pageoffset = 5;
    var NoMoreData = false;
    var inProgress = false;

            $(window).on("scroll", function () {
                var docHeight = $(document).height();
                var winScrolled = $(window).height() + $(window).scrollTop();
                if ((docHeight - winScrolled < 1) & (inProgress == false) & (NoMoreData == false)) {
                    console.log("module scrolled to bottom")
                    inProgress = true;
                    $("#loadingdiv").show();

                    $.post("@Url.Action("InfiniteScroll", "Game")", { "pageoffset": pageoffset },
                        function (data) {
                            pageoffset = pageoffset + 5;
                            NoMoredata = data.NoMoredata;
                            $("#trow").append(data.HTMLString);
                            $("#loadingdiv").hide();
                            inProgress = false;
                        }
                    );
                }
            });
        })
    </script>
