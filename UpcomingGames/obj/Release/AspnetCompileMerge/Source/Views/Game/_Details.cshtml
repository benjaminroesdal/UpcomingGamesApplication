@model IEnumerable<UpcomingGames.Models.GameModel>

<div class="">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
</div>


@foreach (var item in Model)
{
    <div class="detail_container">
        <div class="col_1">
            <div class="col_1_sub_1">
                <div id="@item.game_id" class="carousel slide slideshow" data-ride="carousel" data-interval="false">
                    <!-- Indicators -->
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @for (int i = 0; i < item.images.Count; i++)
                        {
                            if (i == 0 && item.YT_trailer != null)
                            {
                                <div class="item active">
                                    <iframe src="@item.YT_trailer" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                            }
                            else if (i == 0)
                            {
                                <div class="item active">
                                    <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img src="@item.images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                                </div>
                            }
                        }
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#@item.game_id" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#@item.game_id" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col_1_sub_2">
                <div class="game_info_wrapper">
                    <div class="genre_wrapper">
                        <h1 class="title_text">Genres</h1>
                        <div class="genre_container">
                            @for (int i = 0; i < item.genres.Count; i++)
                            {
                                <p class="normal_text">@item.genres.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                    <div class="developer_wrapper">
                        <h1 class="title_text">Developers</h1>
                        <div class="developer_container">
                            @for (int i = 0; i < item.developers.Count; i++)
                            {
                                <p class="normal_text">@item.developers.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                    <div class="publisher_wrapper">
                        <h1 class="title_text">Publishers</h1>
                        <div class="publisher_container">
                            @for (int i = 0; i < item.publishers.Count; i++)
                            {
                                <p class="normal_text">@item.publishers.ElementAt(i)</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="platform_wrapper">
                    <h1 class="title_text">Platforms</h1>
                    <div class="platform_container">
                        @for (int i = 0; i < item.platforms.Count; i++)
                        {
                            if (item.platforms.ElementAt(i) == 6)
                            {
                                <img class="" src="@Url.Content("~/Images/PC.svg")" height="18" width="30" />
                            }
                            else if (item.platforms.ElementAt(i) == 48)
                            {
                                <img class="ps4_logo" src="@Url.Content("~/Images/ps4.svg")" height="18" width="70" />
                            }
                            else if (item.platforms.ElementAt(i) == 203)
                            {
                                <p class="normal_text">Google Stadia</p>
                            }
                            else if (item.platforms.ElementAt(i) == 167)
                            {
                                <p class="normal_text">PS5</p>
                            }
                            else if (item.platforms.ElementAt(i) == 169)
                            {
                                <img class="ps4_logo" src="@Url.Content("~/Images/xbox-x.svg")" height="40" width="40" />
                            }
                            else if (item.platforms.ElementAt(i) == 49)
                            {
                                <img class="xbox" src="@Url.Content("~/Images/xbox-one.svg")" height="18" width="70" />
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col_2">
            <h1 class="title_text detail_title">Summary</h1>
            <p class="normal_text">@item.summary</p>
        </div>
    </div>
}
