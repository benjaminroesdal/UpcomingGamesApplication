@model IEnumerable<UpcomingGames.Models.GameModel>

@foreach (var item in Model)
{
    <div class="wrapper">
        <div class="game_container">
            <div class="game_info" id="game_info_1">
                <p class="game_name">@Html.DisplayFor(modelItem => item.name)</p>
                @{ string temp_dat = item.GetReadableDate(item.released);}
                <p class="release_date_text">@Html.DisplayFor(modelItem => temp_dat)</p>
            </div>
            <div id="@item.game_id" class="carousel slide slideshow" data-ride="carousel" data-interval="false">
                <!-- Indicators -->
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @for (int i = 0; i < item.short_images.Count; i++)
                    {
                        if (i == 0 && item.YT_trailer != null)
                        {
                            <div class="item active">
                                <iframe class="YT_trailer" src=@item.YT_trailer>
                                </iframe>
                            </div>
                        }
                        else if (i == 0 && item.YT_trailer == null)
                        {
                            <div class="item active">
                                <img src="@item.short_images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@item.short_images.ElementAt(i)" class="carousel_image" alt="Los Angeles">
                            </div>
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#@item.game_id" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#@item.game_id" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="game_info" id="game_info_1">
                @for (int i = 0; i < item.platforms.Count; i++)
                {
                    <p>@item.platforms.ElementAt(i)</p>
                }
            </div>
        </div>
    </div>
        }
